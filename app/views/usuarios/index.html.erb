<h1>Usuários</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Sobrenome</th>
    <th>Email</th>
    <th>Telefone</th>
    <th>Data de nascimento</th>
    <th colspan="2"> Ações </th>
  </tr>
  <% @usuarios.each do |usuario| %>
    <tr>
      <td> <%= link_to usuario.nome, show_usuario_path(id: usuario.id) %> </td>
      <td><%= usuario.sobrenome %></td>
      <td><%= usuario.email %></td>
      <td><%= usuario.telefone %></td>
      <td><%= usuario.data_nascimento %></td>
      <td> <%= link_to "Editar", edit_usuario_path(id: usuario.id) %> </td>
      <td><%= link_to "Excluir", destroy_usuario_path(id: usuario.id), method: :delete, 
       data: { confirm: "Tem certeza que deseja excluir o cadastro? 
    Todos os posts serão excluídos."} %> </td>
      </tr>
  <% end %>
</table>
    <br>
    <%= link_to "Novo usuário", new_usuario_path %>
